nav.sticky.top-0.z-50.flex.flex-wrap.items-center.justify-between.px-2.py-3.bg-darkCyan.shadow
  .container.mx-auto.flex.flex-wrap.items-center.justify-between
    // LEFT: LOGO
    .w-full.relative.flex.justify-between.px-4.order-1(class='lg:order-2 lg:w-auto lg:static lg:block')
      // left logo
      a(href='/')
        img.h-14.w-auto.py-2(src='/logo/HighStreetGym-6-transparentWhite_1200x600.png' alt='logo')
      // right nav toggle on mobile
      button#navbarToggle.text-limeGreen.cursor-pointer(type='button' class='lg:hidden')
        svg.size-9
          use(xlink:href='/icons/sprites/solid.svg#bars' fill='currentColor')
    // MIDDLE: MENU ITEMS
    #collapse-navbar.items-center.hidden.order-2(class='lg:order-1 lg:flex lg:flex-row')
      ul.font-medium.flex.flex-col.list-none(class='lg:order-1 lg:flex-row lg:ml-auto')
        li.group.nav-item
          a.px-3.py-2.leading-4.text-lemonGreen(href='/classes' class='group-hover:text-limeGreen group-hover:underline group-hover:underline-offset-8 group-hover:decoration-limeGreen') Classes
        li.group.nav-item
          a.px-3.py-2.leading-4.text-lemonGreen(href='/timetable' class='group-hover:text-limeGreen group-hover:underline group-hover:underline-offset-8 group-hover:decoration-limeGreen') Timetable
        li.group.nav-item
          a.px-3.py-2.leading-4.text-lemonGreen(href='/blog' class='group-hover:text-limeGreen group-hover:underline group-hover:underline-offset-8 group-hover:decoration-limeGreen') Blog
    // RIGHT: LOGIN/SIGNUP
    #collapse-navbar.items-center.hidden.order-3(class='lg:flex lg:flex-row')
      ul.font-medium.flex.flex-col.items-center.list-none(class='lg:order-3 lg:flex-row lg:ml-auto lg:space-x-4')
        if loggedInUser
          li.group.nav-item 
            a.btn.btn-limeGreen.text-darkCyan.btn-sm.space-x-1(href='/posts/create')
              span Create Article 
              svg.size-6 
                use(xlink:href='/icons/sprites/regular.svg#pen-to-square' fill='currentColor')
          li.group.nav-item 
            a.px-3.py-2.leading-4.text-lemonGreen(class='group-hover:text-limeGreen group-hover:underline group-hover:underline-offset-8 group-hover:decoration-limeGreen' href='/auth/my-dashboard')
              img.size-10.rounded-full(src='/images/users/default-avatar-10.png' alt='')
        else
          li.group.nav-item
            a.px-3.py-2.leading-4.text-lemonGreen(href='/login' class='group-hover:text-limeGreen group-hover:underline group-hover:underline-offset-8 group-hover:decoration-limeGreen') Login
          li.group.nav-item
            a.px-3.py-2.leading-4.text-lemonGreen(href='/signup' class='group-hover:text-limeGreen group-hover:underline group-hover:underline-offset-8 group-hover:decoration-limeGreen') Sign Up
