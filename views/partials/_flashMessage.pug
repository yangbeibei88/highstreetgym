mixin flashMessage(color, text)
  div#flashContainer.container.mx-auto
    div(role='alert' class=(color === 'green' ? 'bg-green-100 border border-green-400 text-green-700' : color === 'red' ? 'bg-red-100 border border-red-400 text-red-700' : '') + ' px-4 py-3 m-4 rounded relative')
      span.block(class='sm:inline font-semibold') #{text}
      button.dismissBtn(type="button" aria-label="Close" class=(color === 'green' ? 'text-green-700 hover:bg-green-200' : color === 'red' ? 'text-red-700 hover:bg-red-200' : '') + ' absolute top-0 bottom-0 right-0 p-2 m-1.5 rounded-lg') 
        span.sr-only Close 
        svg.size-5(aria-hidden='true')
          use(xlink:href='/icons/sprites/solid.svg#xmark' fill='currentColor')
