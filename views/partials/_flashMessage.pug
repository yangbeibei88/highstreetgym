mixin flashMessage(color, text)
  div#flashContainer.container.mx-auto
    .bg-green-100.border.border-green-400.text-green-700.px-4.py-3.m-4.rounded.relative(role='alert' class=`bg-${color}-100 border border-${color}-400 text-${color}-700 px-4 py-3 m-4 rounded relative`)
      span.block(class='sm:inline font-semibold') #{text}
      button#dismissBtn(type="button" aria-label="Close" class=`absolute top-0 bottom-0 right-0 p-2 m-1.5 text-${color}-700 rounded-lg hover:bg-${color}-200` onclick='closeAlert(this)') 
        span.sr-only Close 
        svg.size-5(aria-hidden='true')
          use(xlink:href='/icons/sprites/solid.svg#xmark' fill='currentColor')
  script. 
    function closeAlert(button) {
      //- const dismissBtn = document.getElementById("dismissBtn");
      const flashContainer = button.closest("#flashContainer");

      if (flashContainer) {
        flashContainer.remove();
      }
    }

mixin successMessage(text)
  +flashMessage('green', text)

mixin errorMessage(text)
  +flashMessage('red', text)
