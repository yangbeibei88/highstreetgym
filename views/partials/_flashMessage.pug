  //-     const flashContainer = button.closest("#flashContainer");

  //-     if (flashContainer) {
  //-       flashContainer.remove();
  //-     }
  //-   }

mixin successMessage(text)
  +flashMessage('green', text)

mixin errorMessage(text)
  +flashMessage('red', text)

mixin validationErrorMessage(text)
  +flashMessage('red', text)
