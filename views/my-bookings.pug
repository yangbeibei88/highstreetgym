extends layout.pug 
include partials/_tableHeaderItem.pug
include partials/_tableCellItem.pug

block content 
  .page-wrapper
    // 1) HEADER
    header.bg-darkCyan.text-white
      .container.mx-auto.px-4.pt-3(class='md:px-0 md:py-4')
        h1 My Bookings
    // 2) MAIN CCONTENT
    .wrapper.bg-slate-100
      .max-w-screen-xl.grid.grid-cols-1.gap-4.py-5.px-4.mx-auto(class='md:px-0 md:grid-cols-4 lg:mx-20')
        // 2) MAIN CONTENT
        main#my-booking.col-span-1.order-2(class='md:col-span-3')
          // Search & Filter
          // 1) FILTER
          .form.flex.flex-col.items-center.justify-between.p-4.space-y-3(class='lg:space-x-3 lg:space-y-0 lg:flex-row lg:px-10')
            .w-full(class='lg:w-1/2')
              label(for='year')
                | Filter by
                | year
              select#year(name='year')
                option(value='2024' selected='')
                  | 2024
                option(value='2023') 2023
                option(value='2022')
                  | 2022
                option(value='2021')
                  | 2021
            .w-full(class='lg:w-1/2')
              label(for='search-booking') Search
              input#search-booking(type='search' name='search-booking' placeholder='Search your booked classes')
          // my bookings table
          table.w-full.table-auto.border-collapse.border.border-darkCyan.my-4
            caption.text-sm
              | 10 results
            thead.text-sm.text-white.bg-darkCyan
              tr
                +tableHeaderItem('ID#')
                +tableHeaderItem('class booked')
                +tableHeaderItem('class start')
                +tableHeaderItem('class')
                +tableHeaderItem('duration')
                +tableHeaderItem('level')
                +tableHeaderItem('trainer')
                +tableHeaderItem('status')
            tbody
              tr
                +tableCellItem('id', '101')
                +tableCellItem('booking_date', '2024-02-05 14:48 Mon')
                +tableCellItem('class_datetime', '2024-02-07 10:30 Wed')
                +tableCellItem('class', 'Yoga')
                +tableCellItem('duration', '30 mins')
                +tableCellItem('level', 'Intermediate')
                +tableCellItem('trainer', 'Lucy')
                +tableCellItem('status', 'Finished')
        // 3) SIDE MENU
        include partials/_accountSideNav.pug
