extends layout.pug 

block content 
  .page-wrapper
    // 1) HEADER
    header.bg-darkCyan.text-white
      .container.mx-auto.px-4.pt-3(class='md:px-0 md:py-4')
        h1 My Bookings
    // 2) MAIN CCONTENT
    .wrapper.bg-slate-100
      .max-w-screen-xl.grid.grid-cols-1.gap-4.py-5.px-4.mx-auto(class='md:px-0 md:grid-cols-4 lg:mx-20')
        // 2) MAIN CONTENT
        main#my-booking.col-span-1.order-2(class='md:col-span-3')
          // Search & Filter
          // 1) FILTER
          .form.flex.flex-col.items-center.justify-between.p-4.space-y-3(class='lg:space-x-3 lg:space-y-0 lg:flex-row lg:px-10')
            .w-full(class='lg:w-1/2')
              label(for='year')
                | Filter by
                | year
              select#year(name='year')
                option(value='2024' selected='')
                  | 2024
                option(value='2023') 2023
                option(value='2022')
                  | 2022
                option(value='2021')
                  | 2021
            .w-full(class='lg:w-1/2')
              label(for='search-booking') Search
              input#search-booking(type='search' name='search-booking' placeholder='Search your booked classes')
          // my bookings table
          table.w-full.table-auto.border-collapse.border.border-darkCyan.my-4
            caption.text-sm
              | 10 results
            thead.text-sm.text-white.bg-darkCyan
              tr
                th.hidden(class='md:table-cell')
                  | ID#
                th.hidden(class='md:table-cell')
                  | Class Booked
                th.hidden(class='md:table-cell')
                  | Class Started
                th.hidden(class='md:table-cell')
                  | Class
                th.hidden(class='md:table-cell')
                  | Duration
                th.hidden(class='md:table-cell')
                  | Level
                th.hidden(class='md:table-cell')
                  | Trainer
                th.hidden(class='md:table-cell')
                  | Status
            tbody
              tr
                td.grid.grid-cols-2(data-cell='id' class='before:content-[attr(data-cell)] before:uppercase before:font-semibold md:text-center md:table-cell md:before:content-none')
                  | 101
                td.grid.grid-cols-2(class='before:content-[attr(data-cell)] before:uppercase before:font-semibold md:text-center md:table-cell md:before:content-none' data-cell='booking_date')
                  | 2024-02-05 14:48 Mon
                td.grid.grid-cols-2(class='before:content-[attr(data-cell)] before:uppercase before:font-semibold md:text-center md:table-cell md:before:content-none' data-cell='class_datetime')
                  | 2024-02-07 10:30 Wed
                td.grid.grid-cols-2(class='before:content-[attr(data-cell)] before:uppercase before:font-semibold md:text-center md:table-cell md:before:content-none' data-cell='class')
                  | Yoga
                td.grid.grid-cols-2(class='before:content-[attr(data-cell)] before:uppercase before:font-semibold md:text-center md:table-cell md:before:content-none' data-cell='duration')
                  | 30 mins
                td.grid.grid-cols-2(class='before:content-[attr(data-cell)] before:uppercase before:font-semibold md:text-center md:table-cell md:before:content-none' data-cell='level')
                  | Intermediate
                td.grid.grid-cols-2(class='before:content-[attr(data-cell)] before:uppercase before:font-semibold md:text-center md:table-cell md:before:content-none' data-cell='trainer')
                  | Lucy
                td.grid.grid-cols-2(class='before:content-[attr(data-cell)] before:uppercase before:font-semibold md:text-center md:table-cell md:before:content-none' data-cell='status')
                  | Finished
        // 3) SIDE MENU
        include partials/_accountSideNav.pug
