extends ../layouts/main.pug 

block content 
  main#booking-confirmation.flex.items-center.justify-center.flex-grow.bg-gray-300
    .container.mx-auto.flex.flex-col.rounded-xl.bg-white.max-w-2xl.px-6.py-10(class='md:p-16')
      h1.text-2xl.text-center
        | &#x2705;Booking
        | Confirmation
      p.text-center
        | Thank you! We have
        | received your booking!&#x1F44F;
      table.table-auto.border-y.border-slate-300
        caption.text-sm.italic.text-left.font-semibold
          | Booking Summary
        tr
          th Booking ID
          td #{booking.bookingId}
        tr
          th Class
          td #{booking.className}
        tr
          th Start Time
          td
            | #{booking.startDateTime}
        tr
          th Duration
          td #{booking.duration} minutes
        tr
          th Level
          td #{booking.level}
        tr
          th Trainer
          td #{booking.trainerFirstName} #{booking.trainerLastName}
        tr
          th Participant
          td #{booking.userFirstName} #{booking.userLastName}
      .btn-group.mx-auto.pt-4.space-y-4(class='lg:space-y-0 lg:space-x-4')
        a.btn.bg-gray-300.btn-sm(href='/')
          | &laquo;
          | Back to Homepage
        a.btn.btn-limeGreen.btn-sm(href='/auth/account/manage-bookings')
          | Manage My Bookings &raquo;
