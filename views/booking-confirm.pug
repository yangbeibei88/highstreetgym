extends layout 

block content 
  main#booking-confirmation.flex.items-center.justify-center.flex-grow.bg-gray-300
    .container.mx-auto.flex.flex-col.rounded-xl.bg-white.max-w-2xl.px-6.py-10(class='md:p-16')
      h1.text-2xl.text-center
        | &#x2705;Booking
        | Confirmation
      p.text-center
        | Thank you! We have
        | received your booking!&#x1F44F;
      table.table-auto.border-y.border-slate-300
        caption.text-sm.italic.text-left.font-semibold
          | Booking Summary
        tr
          th Booking ID
          td 123
        tr
          th Class
          td Yoga
        tr
          th Start Time
          td
            | Monday, 10:30am,
            | 2024-09-01
        tr
          th Duration
          td 30 minutes
        tr
          th Level
          td Intermediate
        tr
          th Trainer
          td Lucy
        tr
          th Participant
          td Beibei
      .btn-group.mx-auto.pt-4.space-y-4(class='lg:space-y-0 lg:space-x-4')
        a.btn.bg-gray-300.btn-sm(href='/')
          | &laquo;
          | Back to Homepage
        a.btn.btn-limeGreen.btn-sm(href='/my-bookings')
          | Manage My Bookings &raquo;
