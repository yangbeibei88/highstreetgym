extends layout.pug

block content 
  main#all-classes.flex.items-center.justify-center
  .flex.flex-wrap.justify-center.mx-auto.w-full.px-4.pt-10.pb-20.gap-2
    - for(let c of classes) 
      // CONTAINER CARD WRAPPER
      article.flex.flex-col.relative.bg-limeGreen.text-midnightBlue.rounded-2xl.group.p-4.shadow-xl.w-full(class='sm:w-[48%] md:w-[32%] lg:w-[23%]')
        // IMAGE
        img.object-cover.h-96.rounded-xl.shadow-inner(src=`/images/classes/${c.imageCover}` alt=`${c.className}`)
        // CONTENT
        .flex.flex-wrap.items-center.justify-between.space-y-3
          .basis-full.text-center(class='md:text-left')
            h2.text-2xl #{c.className.toUpperCase()}
            p #{c.shortDesc}
          .basis-full.flex.flex-col.space-y-3.items-center.justify-between(class='md:flex-row md:space-y-0')
            .flex.space-x-1
              svg.size-6(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='currentColor')
                path(fill-rule='evenodd' d='M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25ZM12.75 6a.75.75 0 0 0-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 0 0 0-1.5h-3.75V6Z' clip-rule='evenodd')
              span
                | #{c.durationRange}
            a.btn-bullet.btn-white(href='/class/yoga#timetable')
              span
                | Book
                | Now
              span
                svg.size-6(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='currentColor')
                  path(fill-rule='evenodd' d='M8.25 3.75H19.5a.75.75 0 0 1 .75.75v11.25a.75.75 0 0 1-1.5 0V6.31L5.03 20.03a.75.75 0 0 1-1.06-1.06L17.69 5.25H8.25a.75.75 0 0 1 0-1.5Z' clip-rule='evenodd')
          .basis-full.flex.items-center.justify-center.space-x-1(class='md:justify-start')
            each day in c.days.split(',')
              span.text-xs.text-center.font-semibold.inline-block.py-1.px-2.max-w-fit.uppercase.rounded-full.bg-sky-700.text-white.min-w-14 #{day}
