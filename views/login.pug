extends layout.pug

block content 
  // Want to change layout to left iamge, right login form, hide nav menu
  // NEED TO ADD A BACKGROUND IMAGE TO LOGIN PAGE
  // MAIN CONTENT
  main#login.flex.items-center.justify-center.grow.bg-gray-300
    .container.mx-auto.flex.flex-col.rounded-xl.bg-white.max-w-2xl.px-6.py-10(class='md:p-16')
      h1.text-2xl.text-center
        | Sign In To
        | My
        | Account
      form#form-login.flex.flex-col.py-4.my-4
        .space-y-1.my-4
          label.block.text-sm.font-semibold.text-darkCyan(for='login_email')
            | Email
            | Address
          .relative.flex.items-center
            svg.size-6.absolute.left-3.text-gray-500(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
              path(stroke-linecap='round' stroke-linejoin='round' d='M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75')
            input#login_email.pl-11(type='email' name='login_email' placeholder='name@example.com' required='' autocomplete='username')
        .space-y-1.my-4
          label.block.text-sm.font-semibold.text-darkCyan(for='login_password') Password
          .relative.flex.items-center
            svg.size-6.absolute.left-3.text-gray-500(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
              path(stroke-linecap='round' stroke-linejoin='round' d='M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z')
            input#login_password.pl-11(type='password' name='login_password' required='' autocomplete='current_password')
        button.btn-bullet.btn-limeGreen.my-5.space-x-1.w-full(type='submit')
          span Login
          svg.size-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
            path(stroke-linecap='round' stroke-linejoin='round' d='M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15M12 9l3 3m0 0-3 3m3-3H2.25')
      a.text-sm.text-darkCyan.underline.underline-offset-2.decoration-dotted(href='/forgot-password' class='hover:brightness-125 hover:decoration-solid')
        | Forgot
        | my
        | password?
      p
        | Don&apos;t have an account? 
        a.text-sm.text-darkCyan.underline.underline-offset-2.decoration-dotted(href='/signup' class='hover:brightness-125 hover:decoration-solid')
          | Sign
          | up here!
