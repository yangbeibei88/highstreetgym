                input#suburb.pl-11(type='text' name='suburb')
            .space-y-1.col-span-1(class='md:col-span-2')
              label.block.text-sm.font-semibold.text-darkCyan(for='postcode') Postcode
              .relative.flex.items-center
                svg.size-6.absolute.left-3.text-gray-500(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 384 512' fill='currentColor')
                  // !Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.
